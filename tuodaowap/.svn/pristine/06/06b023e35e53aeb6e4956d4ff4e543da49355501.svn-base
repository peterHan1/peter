body{background: #f3f3f3;}
.max_width .succ{margin: 0 5%;margin-bottom: 1.08rem}
.max_width .succ dl{text-align: center;}
.max_width .succ dl dt{margin-top: .8rem;}
.max_width .succ dl dd{font-size: .30rem;color: #333;margin: .2rem 0;}

.max_width .succ .colo{color: #ff711c;font-size:1.6rem;}

.max_width .succ .spree{font-size:.32rem;height:.6rem;/*background: #000;*/margin-bottom: .2rem;}
.succ .spree div b{display: block;width: 100%;height: 1px;background:#ff711c}
.succ .spree div{
	-webkit-box-flex:1;
	-webkit-flex:1;
	-ms-flex:1;
	flex:1;
}
.succ .spree div:nth-child(2){
	-webkit-box-flex:3;
	-webkit-flex:3;
	-ms-flex:3;
	flex:3;
	text-align: center;
	color: #ff711c;
}

.succ .voucher{background: url(../images/money.png); width:6.7rem;height:1.77rem;background-size: 100%;margin-top: .2rem;}
.succ .voucher .fleft{height:100%;width:1.8rem;text-align: center;line-height: 1.77rem;color: #ff711c;font-size: .61rem;float: left;}
.succ .voucher .fleft i{font-style: normal;font-size: .4rem;}
.succ .voucher .fright{height:100%;width:4.5rem;margin: 0  .15rem;/*background: red;*/float: right;}
.succ .voucher .fright ol li{font-size: .24rem;}
.succ .voucher .fright ol li:first-child{height: .7rem;line-height: .74rem;color: #333;border-bottom: 1px solid #d8d8d8;}
.succ .voucher .fright ol li:last-child{color: #777;margin-top: .17rem;}

.last a{height: .88rem;width:100%;background: #ff711c;display: inline-block;font-size: .34rem;color: #fff;text-align: center;line-height: .88rem;position: fixed;left:0;bottom: 0}