<script>
	$(function(){
		$(".select li").on("click",function(){
			var _this = $(this);
			var len = $(".subject").length-1;
			var ins = _this.parents(".subject").index()
			var icon = '<i class="iconfont">&#xe842;</i>';
			_this.addClass("on").siblings("li").removeClass("on");
			$(".btn").removeClass("submitBtn");
			$(".checkTxt").removeClass("on").find("i").html("&#xe9b8;");
			if($(this).find("i").length<=0){
				_this.append(icon).siblings("li").find("i").remove();
			};
			if(ins == len){
				return false;
			}else{
				setTimeout(function(){
					if(ins == 0){
						_this.parents(".subject").find($(".plan")).width("12.5%");
					}
					_this.parents(".subject").hide();
					_this.parents(".subject").next(".subject").show();
				},500)
			}
		});
		$(".getBack").on("click",function(){
			$(this).parents(".subject").hide();
			$(this).parents(".subject").prev(".subject").show();
		});
		$(".checkTxt").on("click",function(){
			if($(this).hasClass("on")){
				$(this).removeClass("on").find("i").html("&#xe9b8;");
				$(".btn").removeClass("submitBtn");
			}else{
				$(this).addClass("on").find("i").html("&#xe844;");	
				if($(".last_select").find("li").hasClass("on")){
					$(".btn").addClass("submitBtn");
				}else{
					$(".btn").removeClass("submitBtn");
				}
			}
		})
		$(document).on("click", ".submitBtn", function() {
			//提交
			
		});
		
	})
</script>