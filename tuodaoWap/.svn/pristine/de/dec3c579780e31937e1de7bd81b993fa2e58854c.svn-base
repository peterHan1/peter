<script src="js/swipeslider.min.js"></script>
<script>
	$(window).load(function() {
		$(".div_img img").on("click",function(){
			var index = $(this).attr("num");
			var h1 = '<div id="full_feature" class="swipslider"><ul class="sw-slides"><li class="sw-slide"><img src="img/infrom/certificate_bg1.png"></li>   <li class="sw-slide"><img src="img/infrom/certificate_bg2.png"></li><li class="sw-slide"><img src="img/infrom/certificate_bg3.png"></li><li class="sw-slide"><img src="img/infrom/certificate_bg4.png"></li></ul></div>'
			var h2 = '<div id="full_feature" class="swipslider"><ul class="sw-slides"><li class="sw-slide"><img src="img/infrom/certificate_bg2.png"></li>   <li class="sw-slide"><img src="img/infrom/certificate_bg3.png"></li><li class="sw-slide"><img src="img/infrom/certificate_bg4.png"></li><li class="sw-slide"><img src="img/infrom/certificate_bg1.png"></li></ul></div>'
			var h3 = '<div id="full_feature" class="swipslider"><ul class="sw-slides"><li class="sw-slide"><img src="img/infrom/certificate_bg3.png"></li>   <li class="sw-slide"><img src="img/infrom/certificate_bg4.png"></li><li class="sw-slide"><img src="img/infrom/certificate_bg1.png"></li><li class="sw-slide"><img src="img/infrom/certificate_bg2.png"></li></ul></div>'
			var h4 = '<div id="full_feature" class="swipslider"><ul class="sw-slides"><li class="sw-slide"><img src="img/infrom/certificate_bg4.png"></li>   <li class="sw-slide"><img src="img/infrom/certificate_bg1.png"></li><li class="sw-slide"><img src="img/infrom/certificate_bg2.png"></li><li class="sw-slide"><img src="img/infrom/certificate_bg3.png"></li></ul></div>'
			$(".img_show").show();
			if(index == 1){
				$(".img_show").append(h1);
			}else if(index == 2){
				$(".img_show").append(h2);	
			}else if(index == 3){
				$(".img_show").append(h3);	
			}else if(index == 4){
				$(".img_show").append(h4);	
			}
			$('#full_feature').swipeslider({
		  		autoPlay:false,
		  		prevNextButtons:false,
		  		bullets:false,
		  	});
		})
		$(".img_show").on("click",function(event){
			if(event.target==this){
				$(".img_show").hide();
			$("#full_feature").remove();
				
//				$(".img_show img").hide();
			}
		})
		$(".nav li a").on("click",function(){
			var index = $(this).parent("li").index();
			$(".nav li a").removeClass("on");
			$(this).addClass("on");
			$(".about_com>div").eq(index).show().siblings().hide();
		})
	})
</script>