*{font-family: "PingFang SC";}
.invite{position: relative;padding-bottom: 1.5rem; background: -webkit-linear-gradient(#FF4211, #FE2428);background: -o-linear-gradient(#FF4211, #FE2428);background: -moz-linear-gradient(#FF4211, #FE2428);background: linear-gradient(#FF4211, #FE2428);}
.invite .header{height: 8.04rem;background: url(../img/invite/invite_1.png)center no-repeat;background-size: 100%;overflow: hidden;}
.invite .header .record{width: 1.87rem;height: 0.54rem;position: absolute;top: 0;right: 0.2rem;}
.invite .header .content{width: 3.6rem;height: 2.7rem;margin: auto;margin-top:3.1rem;text-align: center;}
.invite .header .lev img{width: 2rem;height: 2rem;}
.invite .header .messages{font-size: 0.24rem;color: #b4b4b4;font-style: italic;margin-top: 0.1rem;}
.invite .hongbao{width: 6.58rem;height: 4.66rem;text-align: center; margin: auto;overflow: hidden; background: url(../img/invite/invite_11.png)center no-repeat;background-size: 100%;}
.invite .hongbao .top{font-size: 0.2rem;color: #ff5339;margin-left: 1.5rem;margin-top: 1.2rem;overflow: hidden;}
.invite .hongbao .top div{float: left;}
.invite .hongbao .top div:first-child{width: 1.5rem;margin-right: 2.3rem;}
.invite .hongbao .top span{font-size: 0.37rem;font-weight: bolder;letter-spacing:-1px;font-family: "Arial";}
.invite .hongbao .middle{width: 5.9rem; height: 0.44rem;overflow: hidden; padding: 0.05rem 0.05rem;border-radius: 0.5rem; font-size: 0.24rem;color: #ff2d22;margin-top: 1.3rem;font-weight: bold;text-align: center;display:inline-block;background: -webkit-linear-gradient(left, #efc277 , #fadca8);background: -o-linear-gradient(right, #efc277, #fadca8);background: -moz-linear-gradient(right, #efc277, #fadca8);background: linear-gradient(to right, #efc277 , #fadca8);}
.invite .hongbao .middle div{width: 5.9rem; height: 0.3rem;padding: 0.05rem 0 0.09rem; border-radius: 0.3rem;background: -webkit-linear-gradient(left, #fadca8 , #efc277);background: -o-linear-gradient(right, #fadca8, #efc277);background: -moz-linear-gradient(right, #fadca8, #efc277);background: linear-gradient(to right, #fadca8 , #efc277);}
.invite .hongbao .bottom{width: 100%;text-align: center; font-size: 0.24rem;color: #fff;opacity: 0.7;}
.invite .rights{margin:0.65rem 0 0.1rem;text-align: center;height: 1rem;}
.invite .rights img{width: 2.75rem;height: 1rem;vertical-align: top;}
.invite .first,.invite .second,.invite .third{margin:0 auto 0.43rem;padding: 0.2rem 0 0.3rem 1.8rem;}
.invite .first{width: 4.94rem;height: 1.4rem;background: url(../img/invite/invite_6.png)top no-repeat;background-size: 100%;}
.invite .second{width: 4.94rem;height: 1.92rem;background: url(../img/invite/invite_7.png)top no-repeat;background-size: 100%;}
.invite .third{width: 4.94rem;height: 1.92rem;background: url(../img/invite/invite_8.png)top no-repeat;background-size: 100%;}
.invite dt{font-size:0.22rem;color: #fff;opacity: 0.7;}
.invite dd{font-size:0.22rem;font-weight: bold;color: #fff;}
.invite .margin{margin-bottom:0.2rem;}
.invite .rule{text-align: center;font-size: 0.24rem;margin-bottom:0.9rem;}
.invite .rule a{color: #fff;text-decoration: none;}
.invite .inviteCode .myCode{width: 2.57rem; height: 0.5rem;margin: auto; background: url(../img/invite/invite_9.png)top no-repeat;background-size: 100%;}
.invite .inviteCode .code{text-align: center; font-size: 0.7rem;color: #fff;font-weight: bold;}
.invite .inviteCode .title{color: #ffa19b;font-size: 0.24rem;text-align: center;margin-top: 0.15rem;}
.invite .footer{width: 100%;max-width: 414px;height: 0.9rem;padding-top: 0.12rem;text-align: center;position: fixed;bottom: 0;z-index: 100; background: #FE4B58;}
.invite .footer a{display: block;text-decoration: none; margin: auto;width: 5.28rem;height: 0.67rem;line-height: 0.67rem;font-size: 0.3rem;color: #e82b27;border-bottom: 0.08rem solid #E8A039;border-radius: 0.4rem; background: #FFDB69;}