<script type="text/javascript" src="js/jquery-2.1.0.min.js"></script>
<script>
</script>
<script type="text/javascript">
	var width = document.documentElement.clientWidth;
	var height =  document.documentElement.clientHeight;
	if( width < height ){
      var $_video =  $('.box');
      $_video.width(height);
      $_video.height(width);
      $('video').width(height);
      $('video').height(width);
      $_video.css('top',  (height-width)/2 );
      $_video.css('left',  0-(height-width)/2 );
      $_video.css('transform' , 'rotate(90deg)');
      $_video.css('transform-origin' , '50% 50%');
	}
   </script>