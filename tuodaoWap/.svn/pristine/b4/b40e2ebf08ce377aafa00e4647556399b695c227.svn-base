<script src="js/imgscroll.js"></script>
<script>
	$(function(){
		var scrollImg = $.mggScrollImg('.show_div',{
			  callback : function(ind){//这里传过来的是索引值
//		            console.log(666)
		        },
		});
		scrollImg.go(0);
		
		$(".div_img img").on("click",function(){
			var index = $(this).attr("num");
			console.log(index);
			$(".img_show").show();
			$(".img_show img").eq(index).show();
		
		})
		$(".img_show").on("click",function(event){
			if(event.target==this){
				$(".img_show").hide();
//				$(".img_show img").hide();
			}
		})
		$(".nav li a").on("click",function(){
			var index = $(this).parent("li").index();
			$(".nav li a").removeClass("on");
			$(this).addClass("on");
			$(".about_com>div").eq(index).show().siblings().hide();
		})
	})
</script>