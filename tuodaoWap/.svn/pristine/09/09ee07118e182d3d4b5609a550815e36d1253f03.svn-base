    <meta name="x5-fullscreen" content="true">
    <link rel="stylesheet" type="text/css" href="css/reset.css">
    <script src="js/base.js"></script>
    <style type="text/css">
        body{background:#f2f3f7;font-family: PingFangSC-Regular}
        .result_icon{font-size: .28rem;padding-top: 0.3rem;background: #fff}
        .result_icon .iconfont{font-size: 1.5rem;color: #ff711c;text-align: center;}
        .result_icon p{font-size: .3rem;text-align: center;color: #333;margin-top: .4rem}
        .result_icon .btns{margin: 0 5%}
        .result_icon .btns a{-webkit-box-flex:1;-webkit-flex:1;-ms-flex:1;flex:1;display: block;font-size: .28rem;text-align: center;height: .88rem;line-height: .88rem;border-radius: 5px;margin: 0.6rem 0;}
        .list ul li i{font-size: .22rem;color: #999999;margin-left: .2rem}
        .list ul li div i{font-size: .24rem;color:#777;font-style:normal}
        .result_icon .btns a:first-child{background-color:#ff711c;color: #fff;margin-right: .5rem;border: 2px solid #ff711c}
        .result_icon .btns a:last-child{background: #fff;color: #333;border: 2px solid #ff711c}
        .list ul{margin-top:.2rem;}
        .list ul li{padding: 0 5%;font-size: .28rem;border-bottom: 1px solid #d8d8d8;height: .88rem;line-height: .88rem;color: #333;background: #fff}
        .list ul li:last-child{border-bottom: 0} 
        .color_f{color:#333;font-size: 0.28rem;}
    </style>
</head>

<body>
    <div class="max_width">
        <div class="result_icon">
            <div class="iconfont">&#xe618;</div>
            <p>加入成功</p>
            <div class="flex btns flex_pack_center">
                <a href="" class="btn_l">继续加入</a>
                <a href="" class="btn_r">查看加入记录</a>
            </div>
        </div>
    

        <div class="list">
            <ul>
                <li><span class="color_f">省心投2017061720</span></li>
                <li class="flex flex_pack_justify">
                    <div>投资金额</div>
                    <div><i>4000.00元</i></div>
                </li>
                <li class="flex flex_pack_justify">
                    <div>预计收益</div>
                    <div><i>45.56元</i></div>
                </li>
            </ul>
            <ul>
            	 <li class="flex flex_pack_justify">
                    <div>已使用优惠</div>
                </li>
                <li class="flex flex_pack_justify">
                    <div>加息券</div>
                    <div><i>3%</i></div>
                </li>
            </ul>
        </div>
    </div>   
</body>
